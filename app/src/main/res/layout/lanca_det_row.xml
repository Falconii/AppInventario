<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fundo"
    >


    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >





        <TableLayout
            android:id="@+id/table_400"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/txt_nroetiqueta_400"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="000100"
                    android:textColor="@color/orange"
                    android:textSize="18sp"

                    />


                <TextView
                    android:id="@+id/txt_cor_400"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:gravity="left|center_vertical|center_horizontal"
                    android:text=""
                    android:background="@color/dark_blue"
                    />


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/txt_armazem_400"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="left|center_vertical|center_horizontal"
                    android:text="Armaz.: 01"
                    android:textColor="@color/orange"
                    android:textSize="18sp"

                    />


                <TextView
                    android:id="@+id/txt_contagem_400"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="left|center_vertical|center_horizontal"
                    android:text="Contagem: 01"
                    android:textColor="@color/orange"
                    android:textSize="18sp"
                    />


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_produto_400"
                    android:layout_span="2"
                    android:layout_width="fill_parent"
                    android:layout_height="25sp"
                    android:gravity="left|center_vertical|center_horizontal"
                    android:text="02726020201-FEIJAO BROTO LEGAL 30X1 - FD"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:scrollHorizontally = "true"
                    android:minLines = "1"
                    android:maxLines = "1"

                    />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_qtd_400"
                    android:layout_span="2"
                    android:layout_width="fill_parent"
                    android:layout_height="50sp"
                    android:hint="QTD"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="QTD"
                    android:textColor="@color/black"
                    android:background="@drawable/customcategoria"
                    />
            </TableRow>

        </TableLayout>

  </LinearLayout>


</RelativeLayout>
